//Question: https://www.geeksforgeeks.org/problems/kth-element-in-matrix/1

//Code:
int kthSmallest(int mat[MAX][MAX], int n, int k)
{
  //Your code here
  vector<int>vec;
    for(int i=0;i<n;i+=1){
        for(int j=0;j<n;j+=1){
            vec.push_back(mat[i][j]);
        }
    }
    sort(vec.begin(),vec.end());
    return vec[k-1];
}

//TC: O(n*n)

//Approach: Brute force (to be optimized)
